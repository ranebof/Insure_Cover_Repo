.create-form-cont {
  width: 80vw;
  height: 70vh;
  margin: auto;
  padding: 1.3vh;
  border-radius: 1.3vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(211deg, #39AB59 0%, #39AB8C 94%, #39AB90 100%);
  box-shadow: 1vw 2vh 2vw 0.5vw rgba(0, 0, 0, 0.15);
  justify-content: center;
  align-items: center;
  overflow: auto
}
.create-form-cont::-webkit-scrollbar {
  width: 0;
  height: 0;
}

.form-container {
  width: 60vw;
  height: 60vh;
  padding: 8vw;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-group {
  display: flex;
