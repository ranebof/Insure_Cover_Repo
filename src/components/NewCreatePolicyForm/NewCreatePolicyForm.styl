@import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap');


body {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: auto;
  margin: 0;
  font-family: Montserrat, sans-serif;
  background-color: #f5f5f5;
}

.container {
  background-color: #e4e4e4;
  overflow: auto
  padding: 40px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  text-align: center;
  width: 49vw;
  height: 63vh;
  margin-left: 25%;
  background: linear-gradient(100deg, #e6e6e6, #EDEDED);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container h1 {
  color: #2cba69;
  margin-bottom: 30px;
  margin-bottom:20px
}

.input-field {
  width: 85%;
  padding: 15px;
  margin: 20px 0;
  border-radius: 5px;
  border: none;
  font-size: 16px;
  box-shadow: 0 12px 9px rgba(0, 0, 0, 0.1); 
  font-family: Montserrat, sans-serif;
  background-color: #E4E4E4
}

.button {
  background-color: #2cba69;
  color: #fff;
  border: none;
  padding: 15px 30px;
  border-radius: 23px;
  cursor: pointer;
  font-size: 16px;
  width: 250px;
  margin-top: 50px;
}

.button:hover {
  background-color: #249e57;
}



.last-form-group-big{
  display: flex;
  flex-direction: column;
  margin-bottom: 1.5vh;
}

.desc-input{
  width: 85%;
  height: 20vh;
  padding: 15px;
  margin: 20px 0;
  border-radius: 5px;
  border: none;
  font-size: 16px;
  box-shadow: 0 12px 9px rgba(0, 0, 0, 0.1); 
  font-family: Montserrat, sans-serif;
  background-color: #E4E4E4
  resize: none;
}

.container::-webkit-scrollbar {
  width: 0;
  height: 0;
}
