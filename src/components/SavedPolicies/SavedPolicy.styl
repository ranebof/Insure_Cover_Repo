.policies-cont{
  width: 80vw;
  height: 70vh;
  margin: auto;
  padding: 1.3vh;
  border-radius: 1.3vh;
  display: flex;
  flex-direction: column;
  background-color: #e4e4e4;
  box-shadow: 1vw 2vh 2vw 0.5vw rgba(0, 0, 0, 0.15);
  justify-content: center;
  align-items: center;

}

.saved-policies-list{
  margin-top: 10px
    display: flex;
    gap: 10px;
    flex-direction: column;
    width: 80%;
    height: inherit;
    padding-top: 50px
    overflow: auto

}
.saved-policies-list::-webkit-scrollbar {
  width: 0;
  height: 0;
}
.saved_item_holder{
  width: 100%
  background-color: #39AB59
  height: 5vh
  border-radius: 10px
  color: white
  display: flex
  align-items: center
  font-size: 20px
  justify-content: space-between
}
.saved_item_holder.expanded {
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.x-icon{
  margin-right: 15px
  transform: rotate(45deg)
  transition: transform 0.2s ease;
  
}
.x-icon.expanded{
  margin-right: 15px
  transform: rotate(90deg)
}
.details{
  background-color: white  
  border-bottom-right-radius:10px 
  border-bottom-left-radius:10px 
  padding: 10px
  height: fit-content
  display: flex;
  flex-direction: column
}
.details-desc-cont{
  width: 100%
  display: flex;
  align-items: center
  justify-content: center
  flex-direction: column
  }
.details-desc{
  width: 80%
  display: flex;
  flex-direction: column
  }
.edit_button_cont{
  width: 100%;
  display: flex;
  justify-content: center;
  gap:10px
}
.edit_button{
  background-color: #2cba69;
  color: #fff;
  border: none;
  padding: 5px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 16px;
  width: 150px;
  margin-top: 10px;
  box-shadow: 1vw 2vh 2vw 0.5vw rgba(0, 0, 0, 0.15);
  text-transform: uppercase

}

.edit_button:hover {
  background-color: #249e57;
}

.desc-output{
  height: 20vh;
  margin: 10px 0;
  padding: 10px
  border-radius: 5px;
  border: none;
  font-size: 16px;
  box-shadow: 0 12px 9px rgba(0, 0, 0, 0.1); 
  font-family: Montserrat, sans-serif;
  background-color: #fff
  resize: none;
}
.divider{
  width:90%
  height: 1px
  background-color: black
  margin: 20px 0px 20px 0px
  }

.edit-modal{
  position: absolute
  background-color: rgba(0, 0, 0, 0.538)
  top:0
  left:0
  width: 100%
  height: 100%
  z-index:99
}
.modal-content{
  position inherit;
  top:20%
  left:24%
  width: 50%
  height: 60%
  background-color: #fff
  border-radius: 10px
  padding: 20px
  display: flex
  flex-direction: column
  align-items: center
}