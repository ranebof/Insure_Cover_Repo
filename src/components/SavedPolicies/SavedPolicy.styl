.policies-cont{
  width: 80vw;
  height: 70vh;
  margin: auto;
  padding: 1.3vh;
  border-radius: 1.3vh;
  display: flex;
  flex-direction: column;
  background-color: #e4e4e4;
  box-shadow: 1vw 2vh 2vw 0.5vw rgba(0, 0, 0, 0.15);
  justify-content: center;
  align-items: center;
  overflow: auto
}

.saved-policies-list{
    display: flex;
    gap: 10px;
    flex-direction: column;
    width: 80%;
    height: inherit;
    padding-top: 50px
}

.saved_item_holder{
  width: 100%
  background-color: #39AB59
  height: 5vh
  border-radius: 10px
  color: white
  display: flex
  align-items: center
  font-size: 20px
  justify-content: space-between
}
.saved_item_holder.expanded {
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.x-icon{
  margin-right: 15px
  transform: rotate(45deg)
  transition: transform 0.2s ease;

}
.x-icon.expanded{
  margin-right: 15px
  transform: rotate(90deg)
}
.details{
  background-color: white  
  border-bottom-right-radius:10px 
  border-bottom-left-radius:10px 
  padding: 10px
  height: fit-content
}