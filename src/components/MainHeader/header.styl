@import '../../mixinspack/mixins.styl'

.right_container
   display: flex
   flex-direction: row
   align-items: center

.login_text_r
    color: #09A144 
    font-family: 'Montserrat', sans-serif   
    font-size: 1.85vh
    font-weight: 500
    sizer(auto,auto)
    transition: 0.3s
    
.login_text_r:hover
        color: rgb(8, 96, 42)
        font-family: 'Montserrat', sans-serif   
        font-size: 1.85vh
        font-weight: 500
        sizer(auto,auto)
        cursor pointer

.block_r
    flexer(c,c,cn)
    sizer(6vw,4vh)
    color: #09A144 
    border: 0.3vh solid #09A144 
    border-radius: 0.8vh
    margin-left: 1.563vw
    cursor pointer
    transition: 0.3s


.block_r:hover
    flexer(c,c,cn)
    sizer(6vw,4vh)
    background-color: #09A144 
    border: 0.3vh solid #09A144 
    border-radius: 0.8vh
    margin-left: 1.563vw
    .register_text_r
        color: white

.register_text_r
    font-family: 'Montserrat', sans-serif   
    font-size: 1.7vh
    font-weight: 400
    color: #09A144;
    sizer(auto,auto)
    transition: 0.3s

.circle_r
    sizer(3vw,6vh)
    border-radius: 100%;
    margin-left: 1.615vw
    border: 0.1vh solid black
    
.HeaderMain
    width: 100%
    display: flex
    justify-content: center

.navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    background-color: FFFFFF;
    height: 9.5vh
    width:95%
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 40px; 
    margin-right: 10px;
}

.nav-links {
    display: flex;
    justify-content: center;
}

.nav-links div {
    color: #3AAC73;
    font-size: 2.1vh;
    font-weight: bold;
    margin: 0 20px; 
}

