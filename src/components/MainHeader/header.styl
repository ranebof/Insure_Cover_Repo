.HeaderMain
    sizer(100%,12vh)
    flexer(s,c,rw)
.navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    background-color: FFFFFF;
    height: 9.5vh
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 40px; /* Adjust as needed */
    margin-right: 10px;
}

.nav-links {
    display: flex;
    justify-content: center;
    flex: 1;
}

.nav-links div {
    color: #3AAC73;
    font-size: 2.1vh;
    font-weight: bold;
    margin: 0 20px; /* Adjust as needed */
}

.user-options {
    display: flex;
    align-items: center;
}

.user-options button {
    border: 2px solid #3AAC73;
    background-color: white;
    color: #3AAC73;
    padding: 5px 10px;
    margin: 0 5px;
    border-radius: 5px;
    font-size: 1.8vh;
}

.user-options .circle {
    width: 30px;
    height: 30px;
    border: 2px solid #3AAC73;
    border-radius: 50%;
    margin-left: 10px;
}
