//     border-top-right-radius: 2.4vh
//     border-bottom-right-radius: 2.4vh

.log-form
    sizer(100%,27%) 
    margin-top:2vh

.form-field
    sizer(20vw,6vh)
    margin-top:2vh
    border:none
    background-color:#E4E4E4
    background-image: url('/public/images/profile_icon.png') 
    background-position: 1vw 1.9vh
    background-size:1.2vw
    background-repeat: no-repeat
    padding-left:3vw
    border-radius:0.3vw
    box-shadow: 11px 8px 11px 0px rgba(0,0,0,0.15)

.form-field:nth-child(1)
    background-image: url("/public/images/email_icon.png")
    background-position: 1vw 2.2vh

.form-field:nth-child(2)
    background-image: url("/public/images/password_icon.png")
    background-position: 1vw 1.3vh 

.form-field::placeholder
    font-size:0.9vw    
    color:#616161
    
.form-field:focus
    outline-color: #39AB59
    
.l-button
    sizer(15vw,6vh)
    border: none
    border-radius: 2vw
    background-color: #39AB59
    color:white
    text-transform:uppercase
    font-size:1.2vw
    font-weight:600
    cursor: pointer
    transition: 0.3s

.l-button:hover
    background-color: #3fca66


.reg_card_container_right
    line-height: 1.8vh
    margin: 0 0 0 0
    flexer(c,c,cw)

.text_con_r
  flexer(c,c,rw)
  sizer(auto,auto)

.hello_friend_con
    sizer(auto,9vh)

.hello_friend
    font-size: 4vh
    color: white;
    font-family: "Noto Sans", sans-serif
    font-weight: 600

.enter_text_r_con
    sizer(17vw,auto)

.enter_text_r
    color: #FFF;
    text-align: center;
    font-family: "Montserrat", sans-serif
    font-size: 1.6vh
    font-style: thin;
    font-weight: 300;


.enter_button_r
    flexer(c,c,cn)
    sizer(12vw,4.5vh)
    margin-top: 1.5vh
    border: 0.2vh solid white
    border-radius: 4vh
    color: white
    cursor pointer
    transition: 0.3s


.enter_button_r:hover
    flexer(c,c,cn)
    sizer(12vw,4.5vh)
    margin-top: 1.5vh
    border: 0.2vh solid white
    background-color: white
    border-radius: 4vh
    color: #39AB59

.log-button
    align-content: center
    align-items: center
    align-self: center
    text-align: center
    margin-top:2vh

.enter_form
    sizer(60vw,40vh)


.form_right_login_con
    sizer(0vw,0vh)
    

.form_right_login_u
    sizer(0vw,0vh)
    border:none
    background-color:#E4E4E4
    background-image: url('/public/images/post_ico.png') 
    background-position: 1vw 2vh
    background-size:1.2vw
    background-repeat: no-repeat
    padding-left:3vw
    border-radius:0.3vw
    opacity: 0


.form_right_login_u::placeholder
    font-size:0.9vw    
    color:#616161

.form_right_login_u:focus
    outline-color: #39AB59

.form_right_login_d
    sizer(0vw,0vh)
    margin-top:2vh
    border:none
    background-color:#E4E4E4
    background-image: url('/public/images/password_icon.png') 
    background-position: 1vw 1.2vh
    background-size:1.1vw
    background-repeat: no-repeat
    padding-left:3vw
    border-radius:0.3vw
    opacity: 0

.form_right_login_d::placeholder
    font-size:1vw    
    color:#616161
    margin-right: 11vw

    
.form_right_login_d:focus
    outline-color: #39AB59

.forgot-pass-txt    
    text-decoration: underline
    font-weight:800
    margin-bottom:2vh