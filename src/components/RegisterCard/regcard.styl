@import '../../mixinspack/mixins.styl'

.main_container
    sizer(68vw,71vh)
    margin-left: 15%
    margin-top: 2vh
    border-radius: 2.4vh
    box-shadow: 30px 34px 51.9px -23px rgba(0, 0, 0, 0.15);
    flexer(s,c,rn)

.reg_card_container_left
    sizer(60%,100%)
    background: radial-gradient(258.42% 185.09% at 64.55% 88.93%, #F6F6F6 0%, #D7D7D7 100%), #FFF;
    border-top-right-radius: 2.4vh
    border-bottom-right-radius: 2.4vh
    text-align: center
    align-items: center



.reg_text_container_l
    sizer(auto,auto)
    margin-top: 10%

.reg_circle_l
    position absolute
    sizer(2.5vw,5vh)
    margin-top: 3.5vh
    right: 36vw
    border: 0.1vw solid #DADADA
    border-radius: 50% 
    cursor: pointer
    
.reg_circle_l:hover
    sizer(2.5vw,5vh)
    margin-top: 3.5vh
    border: 0.1vw solid green
    border-radius: 50% 

.google_ico
    sizer(1vw,2vh)
    margin-top: 1.5vh




.reg_use_email
    margin-top: 10.8vh
    color: #343434;
    font-family: 'Montserrat',sans-serif
    font-size: 2.1vh
    margin-bottom: 4vh

.make_acc_text
    color: #3AAC7F;
    text-align: center;
    font-family: 'Montserrat', sans-serif;
    font-size: 2.7vh
    font-weight: 800
    line-height: 100%
    text-transform: capitalize

.reg_card_container_right
    sizer(40%,100%)
    background: linear-gradient(211deg, #39AB59 -8.54%, #39AB8C 96.13%, #39AB90 102.98%);
    border-top-left-radius: 2.4vh
    border-bottom-left-radius: 2.4vh

