.list_button_holder {
  width: 100%;
  display: flex;
  justify-content: center;
}

.list_button_holder button {
  width: 12vw;
  border-radius: 20px;
  border: none;
  background-color: #39ab59;
  color: #ffffff;
  font-size: 15px;
  font-weight: bold;
  padding: 15px;
  letter-spacing: 1px;
  text-transform: uppercase;
  transition: transform 80ms ease-in;
  cursor: pointer;
}

.custom-checkbox {
  position: relative;
  width: 16px;
  height: 7px;
  border: 2px solid #39ab59;
  border-radius: 0;
  background-color: transparent;
  cursor: pointer;
  display: inline-block;
  vertical-align: middle;
  margin-left: 5px;
}

.custom-checkbox input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  width: 100%;
  height: 100%;
  margin: 0;
}

.custom-checkbox.checked {
  background-color: #39ab59;
}

.custom-checkbox.checked::after {
  content: "✔";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 14px;
}

.loader {
  width: 350px;
  height: 180px;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-evenly;
  padding: 30px;
}
.loading {
  width: 100%;
  height: 10px;
  background: lightgrey;
  border-radius: 10px;
  position: relative;
  overflow: hidden;
}
.loading::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 10px;
  background: #2c8260;
  border-radius: 10px;
  z-index: 1;
  animation: loading 0.6s alternate infinite;
}
.loader_label {
  color: #2c8260;
  font-size: 18px;
  animation: bit 0.6s alternate infinite;
}

@keyframes bit {
  from {
    opacity: 0.3;
  }
  to {
    opacity: 1;
  }
}

@keyframes loading {
  0% {
    left: -25%;
  }
  100% {
    left: 70%;
  }
  0% {
    left: -25%;
  }
}
.list_button_holder button:hover {
  background-color: #249e57;
}

