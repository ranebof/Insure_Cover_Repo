.submit-policy-btn {
  padding: 0;
  margin: 0;
  background: none;
  border:none;
  cursor: pointer;
  --primary-color: #39AB59;
  --hovered-color: #39AB59;
  position: relative;
  display: flex;
  font-weight: 600;
  align-items: center;
  font-size: 0.7vw;


}

.submit-policy-btn p {
  margin: 0;
  position: relative;
  font-size: 0.7vw;
  color: var(--primary-color);
  text-transform:uppercase

}

.submit-policy-btn::after {
  position: absolute;
  content: "";
  width: 0;
  left: 0;
  bottom: -0.8vh;
  background: var(--hovered-color);
  height: 2px;
  transition: 0.3s ease-out;
}

.submit-policy-btn p::before {
  position: absolute;
  content: "ЗБЕРЕГТИ";
  width: 0%;
  inset: 0;
  color: var(--hovered-color);
  overflow: hidden;
  transition: 0.3s ease-out;
}

.submit-policy-btn:hover::after {
  width: 100%;
}

.submit-policy-btn:hover p::before {
  width: 100%;
}

