.list_of_medicine_con {
  width: 80vw;
  height: 70vh;
  margin: auto;
  padding: 1.3vh;
  border-radius: 1.3vh;
  display: flex;
  background-color: #e4e4e4;
  box-shadow: 1vw 2vh 2vw 0.5vw rgba(0,0,0,0.15);
  overflow: auto;
}
.upper_side {
  width: auto;
  height: auto;
  display: flex;
}
.arrow_back {
  width: 1.5vw;
  height: 2.5vh;
  margin: 4.4vh 0 0 2.5vw;
  cursor: pointer;
}
.search_box {
  width: 42.25vw;
  height: 3vh;
  margin-top: 4vh;
  padding: 2px;
  margin-left: 1.75vw;
  background-color: #fff;
  border: none;
  border-radius: 1vh;
  background-image: url("/public/images/searchIcon.png");
  background-position: 98% 55%;
  background-size: 1vw;
  background-repeat: no-repeat;
}
.med_list_con {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: start;
  width: 42.25vw;
  height: 60vh;
  margin-left: 5.8vw;
  margin-top: 2vh;
  overflow: auto;
  row-gap: 15px;
  border-radius: 15px;
  padding: 10px
}
.med_list_con::-webkit-scrollbar {
  width: 0;
  height: 0;
}
.medicineListItem {
  width: -webkit-fill-available;
  padding: 5px;
  border-radius: 10px;
  background-color: #fff;
  cursor: pointer;
  box-shadow: 0px 7px 9px #c9bdbd;
}
.medicineListSubItem {
  width: -webkit-fill-available;
  margin-left: 10px;
  padding: 4px;
  background-color: #f5f0f0;
  border-radius: 10px;
  overflow: none;
  cursor: pointer;
}
.med_sub_list_con {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: start;
  overflow-y: auto;
  row-gap: 10px;
  cursor: pointer;
}
.med_item_con {
  height: 7vh;
  display: flex;
  align-items: center;
}

.right_side_container
  width: 40vw
  height: 100%
  background-color: red

.medicine_item_holder{
  display: flex
  flex-direction: row
  gap: 10px
  }